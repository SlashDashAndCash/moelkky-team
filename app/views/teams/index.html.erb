<h1>Listing teams</h1>

<table>
  <tr>
    <th>Team</th>
    <th colspan="3"></th>
  </tr>
 
  <% @teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
      <td><%= link_to 'Show', team_path(team) %></td>
      <td><%= link_to 'Edit', edit_team_path(team) %></td>
      <td><%= link_to 'Delete', team_path(team),
              method: :delete,
	      data: { confirm: 'Are you shure?' } %></td>
    </tr>
  <% end %>
</table>

<p>
<%= link_to 'New Team', new_team_path %>
</p>

